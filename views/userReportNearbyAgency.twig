{% extends 'layoutBeforeLogin.twig' %}
{% block body %}

	<div class="md:w-[calc(100%-13rem)] w-full min-h-[80dvh] md:ml-[13rem] flex flex-col">

		<form method="POST" action="/suggestAgency">
			<div class="w-[350px] flex-col m-6 p-6" style="border:1px solid black;border-radius:5px;pading:5px;background:rgb(233, 116, 116)">
				<div>
					<h1 class="font-bold text-xl">Disaster :
						{{disaster}}
					</h1>
				</div>

				<div>
					<h1 class="font-bold text-xl">Location :
						{{userLocation}}
					</h1>
				</div>

			</div>
		</form>

		<div class="px-6 space-y-6 mb-12">
			<div class="mt-16 pl-2">
				<h1 class="font-bold text-xl">Nearby Rescue Agencies which handles Earthquakes</h1>
			</div>
			{% for agency in suggestedAgencies %}
				{% if agency.name != user.name %}
					<div class="bg-base-200 rounded-xl shadow p-6 hover:shadow-lg border-2 border-base-200 transition duration-300">

						<div class="flex justify-between">
							<div class="flex-col space-y-10 mb-4 ml-2 h-full">

								<div>
									<h1 class="fa-solid font-bold my-2">{{agency.name}}</h1>
									<p>{{agency.location}}</p>
								</div>

								<div class="flex space-x-8">
									<div>
										<h2 class="font-medium">Experience :
											{{agency.experience}}
											Years</h2>
									</div>
									<div>
										<h2 class="font-medium">Rating :
											{{agency.rating}}
										</h2>
									</div>
								</div>
							</div>

							<div class="flex-col h-full space-y-16 mr-10">

								<div class="flex space-x-4">

									{% for key, value in agency.resources %}
										<div>
											<span class="bg-green-200 text-green-800 text-sm font-medium px-2.5 py-2.5 rounded-full ">{{key}}
												:
												{{value}}</span>
										</div>
									{% endfor %}
								</div>


								<div class="flex justify-end">
									<div>
										<button class="send-alert-button">
											Send Alert
										</button>
									</div>
								</div>
							</div>
						</div>

					</div>
				{% endif %}
			{% endfor %}


		</div>
	</div>
{% endblock %}
